{% load static %}

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <title>

      {% block title %}Django Test App{% endblock %}

    </title>
  </head>
  <body>
    {% include "djls_app/header.html" %}
    <main>

      {% block content %}
        <h1>Hello, {{ user.username }}!</h1>
        <p>This is a test template.</p>
        {% if items %}
          <ul>
            {% for item in items %}<li>{{ item.name }}</li>{% endfor %}
          </ul>
        {% else %}
          <p>No items found.</p>
        {% endif %}
        <img src="{% static 'images/logo.png' %}" alt="Logo">
        {# This is a comment #}
      {% endblock content %}

    </main>
  </body>
</html>
